set -euo pipefail
IFS=$'\n\t'

if [[ -t 1 ]]; then
  # stdout is a TTY, enable colors
  STYLE_ERROR="\\e[1;31m"
  STYLE_RESET="\\e[0m"
else
  # stdout is not a TTY, disable colors
  STYLE_ERROR=""
  STYLE_RESET=""
fi

ERROR_HEADER="${STYLE_ERROR}Error:${STYLE_RESET}"

if [[ ! "${1:+empty}" ]]; then
  echo "Usage: $(basename "$0") <file>"
  exit 1
fi

if [[ -d "$1" ]]; then
  echo -e "$ERROR_HEADER \"$1\" is a directory"
  exit 0
fi

if [[ ! -f "$1" && "$1" != "-" ]]; then
  # "-" can be used as argument to upload from standard input
  echo -e "$ERROR_HEADER \"$1\": no such file"
  exit 0
fi

curl -F"file=@$1" https://0x0.st
